[apply]
  whitespace = nowarn
[core]
  whitespace = -indent-with-non-tab,trailing-space,cr-at-eol
  quotepath = false
  autocrlf = input
	excludesFile = ~/.gitignore
[merge]
  summary = true
  conflictstyle = diff3
[push]
  default = current
[diff]
  indentHeuristic = true
  compactionHeuristic = true
[remote]
  pushDefault = origin
[alias]
  a = add -A
  c = checkout
  cc = commit
  s = status
  b = branch
  ca = commit --amend
[commit]
  gpgsign = true
[http "https://gopkg.in"]
	followRedirects = true
[gpg]
	program = /usr/local/bin/gpg
